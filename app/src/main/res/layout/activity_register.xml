<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/topicColor"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="@string/username"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/usernameForRegister"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/textInput" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="@string/firstName"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/firstNameForRegister"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/textInput" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="@string/lastName"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/lastNameForRegister"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/textInput" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="130dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:text="@string/email"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/emailForRegister"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/textInput" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:gravity="center"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="@string/password"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/passwordForRegister"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@color/textInput"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:onClick="onRegisterClicked"
        android:text="@string/register2"
        android:textAllCaps="false"
        android:textSize="20sp" />
</LinearLayout>